<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#003366"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".DatabaseBtn">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:background="@drawable/levelappicon"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_40sdp"

            >

        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="APP DEV"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_below="@+id/appLogo"
            android:textSize="@dimen/_32sdp">

        </TextView>

    </RelativeLayout>

    <androidx.cardview.widget.CardView

        android:id="@+id/mobdev_easy"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardBackgroundColor="#99ee90"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_60sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_easy"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="Easy"
            android:textAllCaps="true">
        </TextView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView

        android:id="@+id/mobdev_med"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardBackgroundColor="#ffae43"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_med"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="Medium"
            android:textAllCaps="true">
        </TextView>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView

        android:id="@+id/mobdev_hard"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardBackgroundColor="#ff0000"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/card_hard"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:text="Hard"
            android:textAllCaps="true">
        </TextView>

    </androidx.cardview.widget.CardView>

</LinearLayout>